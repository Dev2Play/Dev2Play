<div class="container">
        <h1 class="form-heading"></h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Sign In</h2>
                    <p>Introduce tu nombre y contraseña</p>
                </div>
                <form action="/login" method="POST" id="Login">
    
                    <div class="form-group">
    
    
                        <input type="text" class="form-control" name="nombre" id="inputEmail" placeholder="Nombre">
    
                    </div>
    
                    <div class="form-group">
    
                        <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Contraseña">
    
                    </div>
                <div class="row">
                    <div class="forgot">
                        <a href="reset.html">Forgot password?</a>
                    </div>
                    <div class="register">
                        <a href="register.html">Sign Up Now!</a>
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary">Login</button>
    
                </form>
            </div>
        </div>
    </div>
    </div>
