<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Sign Out</h5>
      </div>
      <div class="modal-body text-center">
        <p>Estás a punto de desconectarte.</p>
        <b>¿Estas seguro?</b>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Aún No</button>
        <button type="button" class="btn btn-primary">Salir</button>
      </div>
    </div>
  </div>
</div>
<!--MENU VERTICAL-->
<div class="container">
  <form action="" id="admin" method="POST">
    <div class="row">
      <div class="col-4 mb-5">
        <div class="mt-5 rounded tablamenu">
          <div class="bg-info text-center pt-3 rounded-top menutitulo">Opciones de Administración</div>
          <div class="text-center py-3">
            <a id="revisaproyectos">Revisar Proyectos</a><br>
            <hr>
            <a id="revisareportes">Revisar Reportes</a><br>
            <hr>
            <a data-toggle="modal" data-target="#modalcategoria" id="aniadir_categ">Añadir Categoria</a><br>
            <hr>
            <a id="revisausuarios">Administrar Usuarios</a>
          </div>
        </div>
      </div>

      <div class="col-3 mb-5"></div>
      <div class="col-4 mt-5" style="height: 400px; max-height: 600px; overflow-y: auto; border: 1px solid black">
        <!--TODO: REPORTES-->
        {{#each reporte}}
        <p class="mt-3">
          <u>ID:</u> {{id_reportes}} <br>
          <u>ID PUBLICACION REPORTADA:</u> {{publicacion_reportada}} <br>
          <u>USUARIO REPORTADO:</u> {{reportado}}
          <br>
          <a class="btn-danger" href="/verPubRep/{{publicacion_reportada}}">VER PUBLICACION</a>
          <hr>
        </p>
        {{/each}}

        <!--TODO: USUARIOS-->
        {{#each personas}}

        <p class="mt-3">
          <u>ID</u> <u id="id_us">{{id_usuario}}</u> <br>
          <u>NOMBRE:</u> <a href="/otro_perfil/{{nombre}}">{{nombre}}</a> <br>
          <u>PREMIUM:</u> {{premium}} <br>
          <hr>
        </p>

        {{/each}}

        {{#each proyecto}}
        <p class="mt-3">
          <u>ID:</u> <a href="/gestor/{{id_proyectos}}">{{id_proyectos}}</a> <br>
          <u>TITULO:</u> {{titulo}} <br>
          <u>DESCRIPCION</u> {{descripcion}}<br>
          <u>SE BUSCA:</u> {{roles}}
          <hr>
        </p>
        {{/each}}

        {{#each publicacion}}
        <img src="{{enlace}}" alt="" class="my-5" style="width: 100%;">
        <div class="row">
          <div class="col-8">
            <a class="btn-danger" href="/borrar_pu/{{id_publicacion}}">ELIMINAR PUBLICACION</a>
          </div>
          <div class="col-4">
            <a href="/desestimar/{{id_publicacion}}" class="btn-success">Rechazar</a>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </form>
  <div id="intro_cat">
    <form action="" id="form_cat" method="POST">
      <input type="text" name="cat"
        style="border-top: 0px; border-left: 0px; border-right: 0px; outline: none; border-bottom: 1px solid blue"
        placeholder="Añade una categoria">
      <button type="button" id="guardar_cat">Guardar</button>
    </form>
  </div>


</div>




<br><br><br>
<script>
  $(document).ready(function () {


    /*Tabla Proyectos Toggle*/
    $('#revisaproyectos').on('click', function () {
      var val = 1;
      $('#admin').attr('action', '/administracion/' + val);
      $('#admin').submit()

    });

    $('#revisareportes').on('click', function () {
      var val = 2
      $('#admin').attr('action', '/administracion/' + val);
      $('#admin').submit()

    });

    $('#revisausuarios').on('click', function () {
      var val = 5
      $('#admin').attr('action', '/administracion/' + val);
      $('#admin').submit()
    });

    $('#intro_cat').hide()

    $('#aniadir_categ').on('click', function () {

      $('#intro_cat').show();

    });


    $('#guardar_cat').click(function () {

      $('#form_cat').attr('action', '/nueva_cat');
      $('#form_cat').submit();

    });

  });
  //TODO: ADMIN
</script>